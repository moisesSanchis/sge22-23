<odoo>
    <data>

        <record model="ir.ui.view" id="dungeons.creature_type_tree_list">
      <field name="name">dungeons creatures list</field>
      <field name="model">dungeons.creature_type</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="image_creature" invisible="1" />
          <field name="life"/>
            <field name="attack"/>
            <field name="defense"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="dungeons.creature_type_form_list">
      <field name="name">dungeons creatures list</field>
      <field name="model">dungeons.creature_type</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
              <group string="Basic Atributes">
                <field name="image_creature" widget="image" />
                <field name="name" />
                  <field name="life" />
                  <field name="attack"/>
                <field name="defense" />

            </group>
          </sheet>
        </form>
      </field>
    </record>

    </data>
</odoo>