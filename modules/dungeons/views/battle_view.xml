<odoo>
    <data>
        <record model="ir.ui.view" id="dungeons.battle_tree_list">
            <field name="name">dungeons battle list</field>
            <field name="model">dungeons.battle</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="player1"/>
                    <field name="player2"/>
                    <field name="heart1"/>
                    <field name="heart2"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="dungeons.battle_form_list">
            <field name="name">dungeons battle list</field>
            <field name="model">dungeons.battle</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                          <button name="prepare_battle" type="object" string="Send"
                                class="btn btn-primary"/>
                         <button name="back" type="object" string="Back" class="btn btn-primary"/>
                        <button name="launch_battle" type="object" string="Launch Battle"
                                class="btn btn-primary"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group string="Battle Atributes">
                            <field name="name"/>
                            <field name="player1"/>
                            <field name="player2"/>
                            <field name="heart1"/>
                            <field name="heart2"/>
                        </group>
                        <group string="Battle progress">
                            <field name="progress" widget="progressbar"/>
                        </group>
                    </sheet>
                    <notebook>
                        <page string="Creatures">
                            <group>
                                <field name="qty_creatures1" string="Creatures heart1"/>
                                <field name="qty_creatures2" string="Creatures heart2"/>
                            </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="dungeons.battle_kanban">
            <field name="name">dungeons battle kanban</field>
            <field name="model">dungeons.battle</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="player1"/>
                    <field name="player2"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card o_kanban_record_has_image_fill ">
                                <div class="o_kanban_image_fill_left o_kanban_image_full d-none d-md-block"
                                     t-attf-style="background-image:url('#{kanban_image('dungeons.battle',
                            'image_battle', record.id.value, placeholder)}')">
                                </div>

                                <div class="oe_kanban_details d-flex flex-column">
                                    <a type="open">
                                        <h4 class="o_kanban_record_title oe_partner_heading">
                                            <field name="name"/>
                                        </h4>
                                    </a>

                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="dungeons.battle_calendar">
            <field name="name">dungeons list</field>
            <field name="model">dungeons.battle</field>
            <field name="arch" type="xml">
                <calendar string="Battle Calendar"
                          date_start="date_start"
                          date_stop="date_end"
                          color="player1"
                >
                    <field name="name"/>

                    <field name="player1"/>
                    <field name="player2"/>
                </calendar>
            </field>
        </record>

        <record model="ir.ui.view" id="dungeons.battle_wizard_form_list">
            <field name="name">dungeons battle wizard</field>
            <field name="model">dungeons.battle_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group states="1">
                        <field name="name"/>
                        <field name="player1"/>
                        <field name="heart1"/>
                        <field name="creatures1_available"/>
                    </group>
                    <group states="2">
                        <field name="player2"/>
                        <field name="heart2"/>
                    </group>
                    <group states="3">
                     <!-- <field name="winner"/>-->
                    </group>
                    <footer>
                        <button name="action_previous" type="object"
                                string="Previous"
                                states="2,3"/>
                        <button name="action_next" type="object"
                                string="Next" states="1,2"
                                class="oe_highlight"/>
                    </footer>

                </form>
            </field>
        </record>

    <record id="dungeons.battle_wizard_action" model="ir.actions.act_window">
      <field name="name">Create battle</field>
      <field name="res_model">dungeons.battle_wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>


    </data>
</odoo>